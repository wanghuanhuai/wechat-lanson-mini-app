.table {
  margin: 5px;
  border: 1px solid #ccc;
  font-size: 28rpx;
  background: #fff;  
  border-right: none;
}
 
.tr{
  display: flex;
  justify-content: space-between;
}
 
.td {
  font-size: 28rpx;
  color: #666;
  border: 1px solid #ccc;
  display: inline-block;
  border-left: none;
  border-bottom: none;
  padding: 10rpx 1%;
  width: 15%;
  text-overflow:ellipsis;
  word-wrap:break-word;
  white-space: wrap;
  text-align: center;
}
 
.thead .td{
  font-weight: bold;
  border-top: none;
  justify-content: center; 
  background: #108ee9; 
  color: #fff;
  display: flex;
  height: 2rem; 
  align-items: center;
}
.no-data {
  border: 1px solid #ccc;
  display: inline-block;
  border-left: none;
  border-bottom: none;
  display: flex;
  padding: 50rpx;
  color: #666;
  justify-content: center;
}

.button-top{
  margin: 5px;
}